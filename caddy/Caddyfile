# Caddyfile for Remnawave Bedolaga

{$ADMIN_DOMAIN} {
    encode gzip zstd

    # API first (strip /api before proxying)
    handle_path /api/* {
        reverse_proxy remnawave_bot:8080
    }

    # Static UI
    root * /srv/web-admin
    @spa not path /api/*
    try_files @spa {path} {path}/ /index.html
    file_server
}
